[pull]
    rebase = true

[push]
    autoSetupRemote = true

[alias]
    history = log --pretty=format:\"%h %s\" --graph
    cleanup = !git branch --merged | grep -v `git remote show origin | awk '/HEAD branch/ {print $NF}'` | xargs -r git branch -d
	zip = "!git archive HEAD -o ${PWD##*/}.zip"

[fetch]
    prune = true

[core]
    quotepath = off
    pager = delta
    autocrlf = input

[delta]
    navigate = true

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[rerere]
    enabled = true
[includeIf "gitdir:~/uncover/"]
    path = "~/uncover/.gitconfig"
